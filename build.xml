            <fileset dir="build">
                <include name="*.jar"/>
                <include name="*.swc"/>
            </fileset>
        </copy>

        <zip destfile="${GDS_RELEASE}.zip">
            <fileset dir="build">
                <include name="${eclipse.projectDescription.name}/**"/>
